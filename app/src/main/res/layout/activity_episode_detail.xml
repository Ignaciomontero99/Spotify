<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorSurface"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/episodeDetailImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_episode_detail"
        android:scaleType="centerCrop"
        android:contentDescription="@string/episode_image" />

    <TextView
        android:id="@+id/episodeDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del episodio"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/episodeDetailDescript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción del episodio"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:maxLines="7"
        android:ellipsize="end"
        android:textAlignment="center" />


</LinearLayout>
